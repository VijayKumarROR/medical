<style type="text/css">
	.pat-err p{
		color: red;
	}
	.pat-save{
		color: green;
	}
</style>

<h1>Import Patients</h1>
<div class="pat-err">
	<% if @errors.present? %>
		Below rows are not saved due to error<br>
		<% @errors.each do |err| %>
			<p><%= "#{err} row" %><br></p>
		<% end %>
	<% end %>
</div>

<div class="container">
	<%= form_tag '/patients', multipart: true do %>
		<div class="row">
		<label>Upload the CSV/JSON/XML format</label>
		<%= file_field_tag 'file', accept: '.csv,.json,.xml', class: 'form-control upload-file', required: true %><br>
		<%= submit_tag 'Create', class: 'btn btn-success' %>
		</div>
	<% end %>
</div>

<%= link_to "Back", patients_path %>