<table class="table">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Action</th>
    </tr>
  </thead>

  <tbody>
  <%= form_for(@patient, method: :put) do |f| %>
    <tr>
      <td><%= f.text_field :first_name, value: @patient.first_name %></td>
      <td><%= f.text_field :last_name, value: @patient.last_name %></td>
      <td><%= f.text_field :email, value: @patient.email, readonly: true %></td>
      <td><%= f.submit "Update", class: 'btn btn-success' %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Back', patients_path, class: 'btn' %>